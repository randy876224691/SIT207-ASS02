<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xyib.consumption.record"
    android:background="@mipmap/background03">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton01"
            android:background="@mipmap/buttonrecord01"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton02"
            android:layout_alignTop="@+id/recordtbutton01"
            android:layout_toEndOf="@+id/recordtbutton01"
            android:background="@mipmap/buttonrecord02"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton03"
            android:layout_alignTop="@+id/recordtbutton02"
            android:layout_toEndOf="@+id/recordtbutton02"
            android:background="@mipmap/buttonrecord03"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton04"
            android:layout_below="@+id/recordtbutton01"
            android:layout_alignStart="@+id/recordtbutton01"
            android:background="@mipmap/buttonrecord04"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton05"
            android:layout_alignBottom="@+id/recordtbutton04"
            android:layout_toEndOf="@+id/recordtbutton04"
            android:background="@mipmap/buttonrecord05"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordtbutton06"
            android:layout_alignBottom="@+id/recordtbutton05"
            android:layout_toEndOf="@+id/recordtbutton05"
            android:background="@mipmap/buttonrecord06"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <ListView
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:id="@+id/listrecord"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:background="@mipmap/listbackground01" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordback"
        android:background="@mipmap/buttonhistory01"
        android:layout_marginLeft="13dp"
        android:onClick=""
        android:layout_alignTop="@+id/recordtconfirm"
        android:layout_alignStart="@+id/relativeLayout" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordtconfirm"
        android:layout_below="@+id/listrecord"
        android:layout_alignEnd="@+id/listrecord"
        android:background="@mipmap/buttonrecord07"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:onClick="InsertHistory"/>

</RelativeLayout>
