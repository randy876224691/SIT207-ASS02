<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xyib.consumption.history"
    android:background="@mipmap/background04">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/history"
        android:id="@+id/textView"
        android:layout_above="@+id/listhistory"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/c1" />

    <ListView
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:id="@+id/listhistory"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@mipmap/listbackground02" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyback"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/listhistory"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/buttonhistory01"
        android:layout_marginLeft="13dp"
        android:onClick=""/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historyexit"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/listhistory"
        android:background="@mipmap/buttonhistory02"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="13dp"
        android:onClick="InsertHistory"/>
</RelativeLayout>
